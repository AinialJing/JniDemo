<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">
   <Button
       android:layout_width="200dp"
       android:layout_height="60dp"
       android:text="ToVersionInformationActivity"
       android:onClick="toVersionInformation"/>
   <Button
       android:layout_width="200dp"
       android:layout_height="60dp"
       android:text="ToClassOperatorActivity"
       android:onClick="findClass"/>
   <Button
       android:layout_width="200dp"
       android:layout_height="60dp"
       android:text="findJavaClass"
       android:onClick="findJavaClass"/>

   <Button
       android:layout_width="200dp"
       android:layout_height="60dp"
       android:text="StaticField"
       android:onClick="setStaticField"/>

   <Button
       android:layout_width="200dp"
       android:layout_height="60dp"
       android:text="normalField"
       android:onClick="setNormalField"/>
   <Button
       android:layout_width="200dp"
       android:layout_height="60dp"
       android:text="normalMethod"
       android:onClick="setNormalMethod"/>
   <Button
       android:layout_width="200dp"
       android:layout_height="60dp"
       android:text="staticMethod"
       android:onClick="setStaticMethod"/>
   <Button
       android:layout_width="200dp"
       android:layout_height="60dp"
       android:text="handleException"
       android:onClick="handleException"/>

   <Button
       android:layout_width="200dp"
       android:layout_height="60dp"
       android:text="handleString"
       android:onClick="handleString"/>

   <Button
       android:layout_width="200dp"
       android:layout_height="60dp"
       android:text="handleArray"
       android:onClick="handleArray"/>

</LinearLayout>